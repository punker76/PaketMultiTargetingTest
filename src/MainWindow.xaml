                      WindowStartupLocation="CenterScreen"
                      mc:Ignorable="d">
    <Viewbox Margin="40">
        <iconPacks:PackIconFontAwesome Kind="FontAwesomeFlagBrands" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Viewbox>
</Controls:MetroWindow>